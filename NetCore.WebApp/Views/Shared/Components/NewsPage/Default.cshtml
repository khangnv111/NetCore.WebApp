@using NetCore.ViewModels;
@using Lib; 
@model List<ArticleModel>
@if (Model != null && Model.Count > 0)
{
    var UrlRoot = ViewBag.UrlRoot;
    var rw = new Nomark();
    
    <div class="box_noidung_trai">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                var urlLink = UrlRoot + rw.VietnameseNoMark(item.Title.ToLower()) + "-post" + item.ArticleID.ToString();

                <div class="col-lg-6 col-md-6 col-sx-8 col-sm-12">
                    @if (i % 2 == 0)
                    {
                        <div class="box_img_link_tintuc">
                            <div class="box_img_tin_tuc"><a href="@urlLink"><img src="@Model[i].Image" style="width: 360px; height: 220px" alt="@item.Title"></a></div>
                            <a class="text_tieude_ud" href="@urlLink">@item.Title</a>
                            <span>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</span>
                            <p>@item.Description</p>
                        </div>
                    }
                    else
                    {
                        <div class="box_img_link_tintuc">
                            <div class="box_img_tin_tuc"><a href="@urlLink"><img src="@Model[i].Image" style="width: 360px; height: 220px" alt="@item.Title"></a></div>
                            <a class="text_tieude_ud" href="@urlLink">@item.Title</a>
                            <span>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</span>
                            <p>@item.Description</p>
                        </div>

                    }
                </div>
                if (i % 2 != 0)
                {
                    <div class="clear"></div>
                }
            }
        </div>
    </div>
}