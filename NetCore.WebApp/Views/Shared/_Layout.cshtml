    <script src="~/js/lightslider.js"></script>
    <script src="~/js/utility.js"></script>
    <script src="~/js/jquery-ui.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
